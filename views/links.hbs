<div class="ui grid">
	<div class="column" style="margin: 2rem; padding-bottom: 2rem;">
		<div class="ui centered fluid card">
			<div class="ui content center aligned icon">
				{{> navigation }}
			</div>
			<div class="ui content center aligned">
				{{> filters }}
				{{> pagination }}
			</div>
			<div class="ui content">
				<div class="ui vertical menu fluid">
					{{#each files}}
						<div class="item">
							<div class="content">
								<a href="{{@root.pathname}}l/{{name}}" class="alertable">{{name}} -> {{c}}</a>
								<span onclick="startDelete('{{nonce}}','{{name}}')" class="right floated mini negative ui button"><i class="eraser icon"></i>Delete</span>
								<span onclick="startRename('{{nonce}}','{{name}}')" class="right floated mini ui button"><i class="edit icon"></i>Rename</span>
								<span class="right floated"> {{fileSize size}} - {{dateformat mtime}} </span>
							</div>
						</div>
					{{/each}}
				</div>
			</div>
			<div class="ui content center aligned">
				{{> pagination }}
			</div>
		</div>
	</div>
</div>