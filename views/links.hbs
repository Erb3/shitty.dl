<div class="ui grid">
	<div class="column" style="margin: 2rem; padding-bottom: 2rem;">
		<div class="ui centered fluid card">
			<div class="ui content center aligned icon">
				{{> navigation }}
			</div>
			<div class="ui content center aligned">
				{{> filters }}
				{{> pagination }}
			</div>
			<div class="ui content">
				<div class="ui vertical menu fluid">
					{{#each files}}
						<a href="{{@root.pathname}}l/{{name}}" class="item alertable">
							<div class="content">
								{{name}} -> {{c}}
								<span class="right floated">{{fileSize size}} - {{dateformat mtime}}</span>
							</div>
						</a>
					{{/each}}
				</div>
			</div>
			<div class="ui content center aligned">
				{{> pagination }}
			</div>
		</div>
	</div>
</div>