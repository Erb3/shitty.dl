<div class="ui grid">
	<div class="column" style="margin: 2rem; padding-bottom: 2rem;">
		<div class="ui centered fluid card">
			<div class="ui content center aligned icon">
				<div class="header" style="font-size: 175%">Gallery</div>
			</div>
			<div class="ui content center aligned">
				{{> pagination }}
			</div>
			<div class="ui content">
				<div class="ui link eight doubling cards">
					{{#each files}}
						<a href="/{{name}}" class="card">
							<div class="image">
								<img class="lazy" data-original="/{{name}}">
							</div>
							<div class="extra content">
								{{fileSize size}}
								<span class="right floated">{{dateformat mtime}}</span>
							</div>
						</a>
					{{/each}}
				</div>
			</div>
			<div class="ui content center aligned">
				{{> pagination }}
			</div>
		</div>
	</div>
</div>